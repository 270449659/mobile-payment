
.page-section{
	padding-top:7rpx;
	position: relative;
	background-color: #FFF;
}
.swipe-botton{
    width: 100%;
    height: 100px;
    background:#0d92df;
    top: 0px;
    position: absolute;
    border-radius:0 0 60px 60px;
}
.page-section .page-section-spacing{ 
	position: relative;
	height: 100%;
    z-index: 90;
}
.page-section .swiper-item{    
	padding: 0 25rpx;
	margin:  auto;
	width: auto;
    height: 100%;
    border-radius: 15rpx;
    position: relative;
    display: block;
}
.page-section .swiper-item image{
	width:100%;
	height: 100%;    
	border-radius: 15rpx
}
.page-section .swiper-item image ._img{
		width:100%;
		height: 333px;
}

