
.content {
padding: 0 25rpx;
}
.voucher-center-filter {
	    width: 100%;
	    height: 88rpx;
	    color: #404245;
	    font-size: 28rpx;
	    font-weight: normal;
	    text-align: center;
	    line-height: 88rpx;
	    /* position: fixed;
	    top: 0;
	    z-index: 1000;
	    margin-top:  88px; */
	    overflow: hidden;
	    padding: 0;
	    -webkit-box-sizing: border-box;
	            box-sizing: border-box;
	    background-color: #ffffff;
}
.voucher-center-filter .filter-item {
	    position: relative;
	    width: 33%;
	    height: 88rpx;
	    overflow: hidden;
	    -webkit-box-sizing: border-box;
	            box-sizing: border-box;
		border-bottom: 1px solid #FFFFFF;
}
.voucher-center-filter .filter-item .arrow{
	    position: absolute;
	    top: 34rpx;
	    right: 10rpx;
	    width: 24rpx;
	    height: 100%;
}
.voucher-center-filter .filter-item .arrow .ind{
	    position: relative;
	    display: block;
	    width: 16rpx;
	    height: 8rpx;
	    overflow: hidden;
	    -webkit-box-sizing: border-box;
	            box-sizing: border-box;
	    margin-bottom:4px;
	    opacity: 1;
}
.voucher-center-filter .filter-item .text {
	    display: block;
	    width: 90%;
	    height: 100%;
	    color: #404245;
	    font-size: 28rpx;
	    font-weight: normal;
	    text-align: center;
	    line-height: 88rpx;
	    -webkit-box-sizing: border-box;
	            box-sizing: border-box;
	    margin: 0 auto;
}
.voucher-center-filter .filter-item.active{border-bottom: 1px solid #0d9ae9;}
.voucher-center-filter .filter-item.active .text {
	    color:#0d9ae9;
}
	
	
	

